# File: .env.example
# Author: Alfrida Sabar
# Deskripsi: Contoh environment variables untuk project SmartCash

# Roboflow API Configuration
ROBOFLOW_API_KEY=your-roboflow-key
ROBOFLOW_WORKSPACE=smartcash
ROBOFLOW_PROJECT=rupiah-emisi-2022
ROBOFLOW_VERSION=3

# Model Configuration
MODEL_BACKBONE=efficientnet  # 'csp' atau 'efficientnet'
MODEL_WEIGHTS_PATH=weights/
PRETRAINED_BACKBONE=True
TRAINABLE_BACKBONE_LAYERS=3

# Dataset Configuration
DATA_DIR=data/
TRAIN_DIR=data/train
VALID_DIR=data/valid
TEST_DIR=data/test

# Hardware Resources
NUM_WORKERS=8
BATCH_SIZE=32
MEMORY_LIMIT=0.6  # 60% resource usage
DEVICE=cuda  # 'cuda' atau 'cpu'

# Training Parameters
EPOCHS=100
WARMUP_EPOCHS=3
LEARNING_RATE=0.01
MOMENTUM=0.937
WEIGHT_DECAY=0.0005

# Logging & Output
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/smartcash.log
SAVE_VISUALIZATIONS=True
RESULTS_DIR=results/

# Development Mode
DEBUG_MODE=False
PROFILE_PERFORMANCE=False